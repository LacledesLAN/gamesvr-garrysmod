{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linux Image",
            "type": "shell",
            "command": "docker pull lacledeslan/steamcmd:linux; docker pull bookworm-slim; docker build . --rm -f linux.Dockerfile -t lltest/gamesvr-garrysmod --no-cache --build-arg BUILDNODE=$env:computername;",
            "dependsOn": "download-sub-modules",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm lltest/gamesvr-garrysmod ./ll-tests/gamesvr-garrysmod.sh;",
            "dependsOn": "Build Linux Image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host lltest/gamesvr-garrysmod ./srcds_run -game garrysmod +map gm_construct -insecure -norestart +sv_lan 1 +maxplayers 32 +usercon +rcon_password \"test123\";",
            "dependsOn": "Build Linux Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm lltest/gamesvr-garrysmod;",
            "dependsOn": "Build Linux Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
